{
  "root": true,
  "env": {
    "commonjs": true,
    "es2020": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "commonjs"
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "linebreak-style": ["error", "unix"],
    "no-unused-vars": ["warn"],
    "@typescript-eslint/no-unused-vars": ["warn"]
  },
  "ignorePatterns": ["dist"]
}
